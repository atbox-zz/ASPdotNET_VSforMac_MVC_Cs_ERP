@{
    var titles = ViewBag.Titles as IEnumerable<SelectListItem>;
}

@model ASPdotNET_VSforMac_MVC_Cs_ERP.ViewModels.Product_itemViewModel

<div class="container-fluid">
    <div class="row" style="margin-top : 10px; margin-bottom: 10px;">
        <form method="post" asp-action="Add">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" type="text" placeholder="類別名稱" class="form-control" />
                @Html.ValidationMessageFor(model => model.Name, "", new { style = "color:red;" })
            </div>
            <div class="form-group">
                <label asp-for="Descripcition"></label>
                <input asp-for="Descripcition" type="text" placeholder="說明" class="form-control" />
                @Html.ValidationMessageFor(model => model.Descripcition, "", new { style = "color:red;" })
            </div>
            <hr />
            <p>
                <button type="submit" class="btn btn-primary">儲存</button>
            </p>
        </form>
    </div>
</div>